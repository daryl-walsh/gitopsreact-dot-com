{
  "name": "gitopsreact",
  "description": "developing and deploying a react application using containers and a full CI/CD lifecycle",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && babel src -d dist --copy-files",
    "dev:serve": "yarn run build && cp spec/openapi/hobnob.yaml dist/openapi.yaml && dotenv -e envs/.env node dist/index.js",
    "dev:test": "npm run test:unit && npm run test:integration && npm run test:e2e:prepare && yarn run test:e2e",
    "dev:watch": "nodemon -w src --exec npm run serve",
    "docs:format": "dotenv -e envs/.env ./scripts/swagger-ui/format.sh",
    "docs:update": "git submodule update --init --recursive && yarn run docs:format",
    "docs:serve": "dotenv -e envs/.env ./scripts/swagger-ui/serve.sh",
    "fix": "eslint src --fix",
    "lint": "eslint src",
    "precommit": "npm run lint",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:serve": "dotenv -e envs/test.env -e envs/.env babel-node src/index.js",
    "test:coverage": "nyc --reporter=html --reporter=text npm run test",
    "test:unit": "mocha 'src/**/*.unit.test.js' --require @babel/register",
    "test:unit:coverage": "nyc --reporter=html --reporter=text npm run test:unit",
    "test:integration": "dotenv -e envs/test.env -e envs/.env mocha -- 'src/**/*.integration.test.js' --require @babel/register",
    "test:integration:coverage": "nyc --reporter=html --reporter=text npm run test:integration",
    "test:e2e": "dotenv -e envs/test.env -e envs/.env ./scripts/e2e.test.sh",
    "test:e2e:prepare": "dotenv -e envs/test.env -e envs/.env ./scripts/e2e.prepare.sh",
    "test:e2e:coverage": "nyc --reporter=html --reporter=text npm run test:e2e",
    "serve": "yarn run build && cp spec/openapi/hobnob.yaml dist/openapi.yaml && dotenv -e envs/.env pm2 start dist/index.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint src --ext .js --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh: //git@github.com/darylwalsh/gitopsreact-dot-com.git"
  },
  "author": "Daryl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darylwalsh/gitopsreact/issues"
  },
  "homepage": "https://github.com/darylwalsh/gitopsreact#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-eslint": "^10.0.1",
    "chance": "^1.0.16",
    "cucumber": "^4.2.1",
    "dotenv-cli": "^1.4.0",
    "eslint": "^5.5.0",
    "eslint-config-jest-enzyme": "^7.0.2",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "jsonfile": "^5.0.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "mocha": "^5.2.0",
    "ndb": "^1.0.44",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "object-path": "^0.11.4",
    "pm2": "^3.1.2",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.2",
    "sinon": "^6.2.0",
    "superagent": "^3.8.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "ajv": "^6.5.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "elasticsearch": "^15.1.1",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.5.1",
    "random-seed": "^0.3.0",
    "special-escape": "^0.1.0"
  }
}
